<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:minHeight="325dp">

    <ImageView
        android:id="@+id/favourite_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/recipe_name"
        android:layout_below="@id/recipe_image"
        android:padding="16dp"
        android:src="@drawable/ic_favourites_black_24dp"
        android:background="@drawable/borders"/>

    <ImageView
        android:id="@+id/edit_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/favourite_icon"
        android:padding="16dp"
        android:layout_below="@id/recipe_image"
        android:src="@drawable/ic_edit_24dp"
        android:background="@drawable/borders"/>

    <ImageView
        android:id="@+id/delete_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/recipe_image"
        android:layout_toEndOf="@id/edit_icon"
        android:background="@drawable/borders"
        android:padding="16dp"
        android:src="@drawable/ic_delete_24dp" />

    <TextView
        android:id="@+id/recipe_name"
        android:layout_width="224dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/recipe_image"
        android:background="@drawable/borders"
        android:hint="Name of recipe"
        android:paddingLeft="10dp"
        android:paddingTop="13dp"
        android:paddingEnd="10dp"
        android:paddingBottom="13dp"
        android:textColor="@color/thirty"
        android:textSize="22dp" />

    <ImageView
        android:id="@+id/recipe_image"
        android:layout_width="230dp"
        android:layout_height="250dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="91dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bordersimage"
        android:padding="4dp"
        android:scaleType="fitXY"
        app:srcCompat="@android:drawable/stat_notify_error" />

</RelativeLayout>