<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewRecipeActivity">

    <TextView
        android:id="@+id/display_name"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Recipe Name"
        android:textColor="@color/thirty"
        android:textSize="22dp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@drawable/borders"
        android:paddingLeft="10dp"
        android:paddingTop="13dp"
        android:paddingEnd="10dp"
        android:paddingBottom="13dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recipe_image" />

    <TextView
        android:id="@+id/display_description"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/borders"
        android:gravity="start"
        android:paddingLeft="10dp"
        android:paddingTop="13dp"
        android:paddingEnd="10dp"
        android:paddingBottom="13dp"
        android:text="Recipe Description"
        android:textColor="@color/thirty"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/display_name" />

    <TextView
        android:id="@+id/display_ingredients"
        android:layout_width="340dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/borders"
        android:gravity="start"
        android:paddingLeft="10dp"
        android:paddingTop="13dp"
        android:paddingEnd="10dp"
        android:paddingBottom="13dp"
        android:text="Recipe Ingredients"
        android:textColor="@color/thirty"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/display_description" />

    <TextView
        android:id="@+id/display_instructions"
        android:layout_width="340dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/borders"
        android:gravity="start"
        android:paddingLeft="10dp"
        android:paddingTop="13dp"
        android:paddingEnd="10dp"
        android:paddingBottom="13dp"
        android:text="Recipe Instructions"
        android:textColor="@color/thirty"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/display_ingredients" />

    <ImageView
        android:id="@+id/recipe_image"
        android:layout_width="230dp"
        android:layout_height="250dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/bordersimage"
        android:padding="4dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/stat_notify_error"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/ten"
        android:text="@string/backButton"
        android:textColor="@color/thirty"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/display_instructions" />

</androidx.constraintlayout.widget.ConstraintLayout>